<check_ok>:
    source:'resource_files/ico64/check_ok.png'
    size: 60,60
    color: 1, 1, 1, .8
    size_hint: .1, None



<check_wrong>:
    source:'resource_files/ico64/check_wrong.png'
    size: 60,60
    color: 1, 1, 1, .8
    size_hint: .1, None

<MessagePopup>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: message
            size_hint: 1,0.8
            text: ''
        Button:
            size_hint: 1,0.2
            text: 'OK'
            on_press: root.dismiss()


<Register>:
    user: user_input
    password: password_input
    email : email_input
    second_password : second_password_input
    title: title

    #boxName : box_name
    #boxPassword: box_password
    #boxPasswordSecond: box_password_second
    #boxEmail: box_email

    BoxLayout:
        orientation: 'vertical'
        rows: 2
        size: root.size
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            size_hint : (1, .2)
            size_hint_min_x: 300
            size_hint_min_y: 100

            MDLabel:
                id : title
                text: "Entity"
                halign: "center"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color

        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            size_hint : (1, .8)
            MDCard:
                orientation: 'vertical'
                size_hint_y: .7
                size_hint_x: .6
                size_hint_min_x: 400
                size_hint_min_y: 400
                size_hint_max_x: 600
                size_hint_man_y: 1000
                elevation: 0
                BoxLayout:
                    orientation:'vertical'
                    padding: 20
                    spacing: 20
                    BoxLayout:
                        orientation:'horizontal'
                        size_hint_y: None
                        height: 50
                        MDTextField:
                            id: user_input
                            write_tab: False
                            halign:'center'
                            hint_text: "Nombre de Usuario"
                            helper_text:'Nombre de Usuario'
                            max_text_length: 15

                    BoxLayout:
                        orientation:'horizontal'
                        size_hint_y: None
                        height: 50
                        MDTextField:
                            id: password_input
                            write_tab: False
                            halign:'center'
                            hint_text: "Contraseña"
                            password:True
                            max_text_length: 15

                    BoxLayout:
                        orientation:'horizontal'
                        size_hint_y: None
                        height: 50
                        MDTextField:
                            id: second_password_input
                            write_tab: False
                            halign:'center'
                            hint_text: "Repetir contraseña"
                            password:True
                            max_text_length: 15

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 50
                        MDTextField:
                            id: email_input
                            write_tab: False
                            halign:'center'
                            hint_text: "Email"



                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 20
                        MDRaisedButton:
                            text: 'Registrarse'
                            size_hint_x : 1
                            on_press: root.go_in()


                        AnchorLayout:
                            anchor_x:'center'
                            anchor_y:'center'
                            size: root.size
                            MDRaisedButton:
                                text: 'Volver'
                                on_release:root.go_to_login()




