

<MessagePopup>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: message
            size_hint: 1,0.8
            text: ''
        Button:
            size_hint: 1,0.2
            text: 'OK'
            on_press: root.dismiss()


<Login>:
    user: user_input
    password: password_input
    keepOpen: keepOpen
    ck_keepOpen:ck_keepOpen
    newPass:newPass
    BoxLayout:
        orientation: 'vertical'
        rows: 3
        size: root.size
        MDIcon:
            size_hint : (1, .2)
            halign: "center"
            icon: "graph"
            font_size: "40sp"
            theme_text_color:"Custom"
            text_color: app.theme_cls.primary_color

        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            size_hint : (1, .7)
            MDCard:
                size_hint_y: .9
                size_hint_x: .9
                size_hint_min_x: 350
                size_hint_min_y: 350
                size_hint_max_x: 450
                size_hint_max_y: 500
                elevation: .0
                BoxLayout:
                    orientation:'vertical'
                    padding: 20
                    spacing: 20

                    MDTextField:
                        id: user_input
                        write_tab: False
                        halign:'center'
                        hint_text: "User"
                    MDTextField:
                        id: password_input
                        write_tab: False
                        halign:'center'
                        hint_text: "Password"
                        password:True
                    BoxLayout:
                        orientation: 'horizontal'
                        rows: 2
                        size_hint_y: None
                        height: 20
                        MDCheckbox:
                            id: ck_keepOpen
                            size_hint: None, None
                            size: "48dp", "48dp"
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            active: False
                        MDTextButton:
                            id: keepOpen
                            text: "Remember password and user"

                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 20

                        MDRaisedButton:
                            text: 'Login'
                            size_hint_x : 1
                            on_press: root.go_in()
                        MDTextButton:
                            id: newPass
                            text: "Did you forget your password?"
                        MDSeparator:
                            height: "1dp"
                        AnchorLayout:
                            anchor_x:'center'
                            anchor_y:'center'
                            MDRaisedButton:
                                text: 'Create new account'
                                on_release:root.go_to_register()





